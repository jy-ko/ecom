


<div class="row">
  <div class="col-sm-6">
    <h1>Line_items</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_line_item_path, class: 'btn btn-primary' do %>
    Add New Line item
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Product</th>
            <th>Cart</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @line_items.each do |line_item| %>
        <%= content_tag :tr, id: dom_id(line_item), class: dom_class(line_item) do %>
          

                      <td><%= line_item.product %></td>
                      <td><%= line_item.cart %></td>
          
          
            <td><%= link_to 'Show', line_item %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
