<div class="container">
<div class="row">
  <div class="col-sm-6">
    <h1>Listings</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_listing_path, class: 'btn btn-primary' do %>
    Add New Listing
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
            <th>image</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price</th>
            
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <%= content_tag :tr, id: dom_id(listing), class: dom_class(listing) do %>
          
            <td><%= link_to listing.name, listing %></td>
          
                      <td><%= link_to image_tag(listing.image_url(:thumb)), listing %>
                      <td><%= listing.category %></td>
                      <td><%= listing.description %></td>
                      <td><%= listing.price %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>